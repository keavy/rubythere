<table class="events">
  <thead>
    <th></th>
    <th>Event</th>
    <th>Location</th>
    <th>Event date</th>
    <% if @focus == 'speak' -%>
      <th>CFP opens</th>
      <th>CFP closes</th>
    <% else -%>
      <th></th>
    <% end -%>
  </thead>
  <tbody>
    <% happenings.each do |happening| -%>
      <tr>
        <td><%= image_tag "http://img.tweetimag.es/i/#{happening.event.twitter}_n" unless happening.event.twitter.blank? %></td>
        <td class="name"><%= link_to happening.event.name, event_path(happening.event) %></td>
        <td class="city"><%= city_state(happening.location)%><br /><%= happening.location.country %></td>
        <td class="date"><%= event_date(happening.start_at, happening.end_at) %></td>
        <td class="status"><%= happening.status %></td>
      </tr>
    <% end -%>
  </tbody>
</table>

